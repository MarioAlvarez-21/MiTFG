<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#1b384a">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="5dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="45dp"
        android:tint="@color/botones"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/kisupercarssinfondo" />

    <ImageButton
        android:id="@+id/imageButtonPerfilUsuario"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/estilo_constrain"
        android:elevation="20dp"
        android:outlineSpotShadowColor="@color/black"
        android:scaleType="fitCenter"
        android:tint="@color/botones"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/iconologin" />

    <ImageButton
        android:id="@+id/imageButtonSalir"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/estilo_constrain"
        android:elevation="20dp"
        android:outlineSpotShadowColor="@color/black"
        android:scaleType="fitCenter"
        android:tint="@color/botones"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/salirdeapp" />

    <ImageButton
        android:id="@+id/imageButtonMeGusta"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/estilo_constrain"
        android:elevation="20dp"
        android:outlineSpotShadowColor="@color/black"
        android:padding="8dp"
        android:scaleType="fitCenter"
        android:tint="@color/botones"
        app:layout_constraintStart_toEndOf="@+id/imageButtonSalir"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/favorito" />

    <ImageButton
        android:id="@+id/imageButtonComparar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/estilo_constrain"
        android:elevation="20dp"
        android:outlineSpotShadowColor="@color/black"
        android:padding="5dp"
        android:scaleType="fitCenter"
        android:tint="@color/botones"
        app:layout_constraintEnd_toStartOf="@+id/imageButtonPerfilUsuario"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/comparacion" />
</androidx.constraintlayout.widget.ConstraintLayout>
