<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/cv"
    android:animateLayoutChanges="true"
    app:cardCornerRadius="16dp"
    app:cardElevation="12dp"
    card_view:cardUseCompatPadding="false"
    app:cardUseCompatPadding="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#1b384a"
    app:cardPreventCornerOverlap="false"
    android:outlineAmbientShadowColor="@color/white"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    app:cardBackgroundColor="#1b384a">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:orientation="vertical"
        android:background="#1b384a">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:orientation="vertical"
            android:background="#1b384a">
            <ImageView
                android:layout_width="150dp"
                android:layout_height="70dp"
                android:id="@+id/iconoCarta"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:src="@mipmap/iconogoogle"
                android:layout_alignParentLeft="true"
                android:scaleType="centerCrop"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="2dp"
                android:layout_toEndOf="@+id/iconoCarta"
                android:orientation="horizontal"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@+id/iconoCarta"
                android:gravity="center"
                >
                <TextView
                    android:id="@+id/tx_nombreModelo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:text="Google"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    />
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>